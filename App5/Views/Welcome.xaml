<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Views.Welcome"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:App5.ViewModels"  
             xmlns:model="clr-namespace:App5.Models" 
             x:Name="BrowseItemsPage"
             BackgroundColor="#e5e5e5">

    <ContentPage.Content>
        <StackLayout  VerticalOptions="Center">
            <Image x:Name="logo" 
                   Source="alogo.png" 
                   Margin="0,0,0,0" 
                   Scale="0.7"
                   BackgroundColor="Transparent"/>

            <Button ImageSource="aenter.png" Clicked="Login" BackgroundColor="Transparent" Margin="-70,-50,-70,-40"  Scale="0.6"></Button>
            <Button ImageSource="aregistr.png" Clicked="Registr" BackgroundColor="Transparent" Margin="-70,0,-70,0" Scale="0.6"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>